<link rel="stylesheet" type="text/css" href="../css/create_form.css">
{{> leftrail}}
<div class="middle-rail" ng-controller="createOfficeController" data-ng-init="init()">
  <h3>Configure New Office</h3>
  <form ng-submit="createOffice()">
    <div class="form-group department-type">
      {{{{raw-helper}}}}
      <select class="form-control" ng-model="formOffice.department_id">
        <option value="">Select Department</option>
        <option ng-repeat="department in departments" value={{department.id}}>{{department.unique_code}}</option>
      </select>
      {{{{/raw-helper}}}}
    </div>
    <div>
      <label for="inputName">Office Name</label>
      <input type="text" id="inputName" ng-model="formOffice.name" class="form-control" placeholder="Office name" required autofocus>
    </div>
    <div>
      <label for="inputDesc">Office Description</label>
      <textarea class="form-control" rows="3" ng-model="formOffice.description" id="inputDesc" placeholder="Office description" required></textarea>
    </div>
    <div>
      <label for="inputCode">Office Code</label>
      <input type="text" id="inputCode" ng-model="formOffice.unique_code" class="form-control" placeholder="Department code" required>
    </div>
    <div>
      <label for="inputAddress">Office Address</label>
      <input type="text" id="inputAddress" ng-model="formOffice.address" class="form-control" placeholder="Department address" required>
    </div>
    <div>
      <label for="inputPhone">Office Phone</label>
      <input type="text" id="inputPhone" ng-model="formOffice.phone" ui-mask="1-999-999-9999" class="form-control" ui-mask-placeholder ui-mask-placeholder-char="_" required>
    </div>
    <div>
      <label for="inputEmail">Office Email</label>
      <input type="text" id="inputEmail" ng-model="formOffice.group_email" class="form-control" placeholder="Department email" required>
    </div>
    <button type="submit" class="btn btn-primary submit-form">Create Office</button>
  </form>
</div>
{{> rightrail}}
<script src="../js/controllers/create_office.js"></script>
