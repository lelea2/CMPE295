{{> leftrail}}
<div class="middle-rail" ng-controller="tagsController" data-ng-init="init()">
  <h3>All Tags</h3>
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th>#</th>
          <th>Tag Name</th>
          <th>Description</th>
          <th>Keywords</th>
          <th>View workflow</th>
        </tr>
      </thead>
      {{{{raw-helper}}}}
      <tbody>
        <tr ng-repeat="tag in tags">
          <td>{{$index + 1}}</td>
          <td>{{tag.name}}</td>
          <td>{{tag.description}}</td>
          <td>{{tag.keywords}}</td>
          <td><a href="/workflows?tag_id={{tag.id}}">View workflows</a></td>
        </tr>
      </tbody>
      {{{{/raw-helper}}}}
    </table>
    <a href="/create_tag" class="btn btn-info">Configure new Tag</a>
  </div>
  {{> loading}}
  {{> notification}}
</div>
{{> rightrail}}
<script src="../js/controllers/tag.js"></script>
