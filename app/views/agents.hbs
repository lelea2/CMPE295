{{> leftrail}}
<div class="middle-rail" ng-controller="agentsController" data-ng-init="init()">
  <h3>All Agents</h3>
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>Agent Name</th>
        <th>Agent Email</th>
        <th>Agent Phone</th>
        <th>Agent Role</th>
        <th>Agent Permission</th>
      </tr>
    </thead>
    {{{{raw-helper}}}}
    <tbody>
      <tr ng-repeat="agent in agents">
        <td>{{$index + 1}}</td>
        <td>{{agent.lastName + ", " + agent.firstName}}</td>
        <td>{{agent.email}}</td>
        <td>{{agent.phone}}</td>
        <td>{{agent.role}}</td>
        <td>{{agent.permission}}</td>
      </tr>
    </tbody>
    {{{{/raw-helper}}}}
  </table>
  {{> loading}}
</div>
{{> rightrail}}
<script src="../js/controllers/agents.js"></script>
