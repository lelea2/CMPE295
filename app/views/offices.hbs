{{> leftrail}}
<div class="middle-rail" ng-controller="officesController" data-ng-init="init()">
  <h3>All Offices</h3>
  {{{{raw-helper}}}}
  <div class="col-md-6" style="margin: 15px 0">
    <select class="form-control" ng-model="currentDepartment" ng-change="selectDepartment()">
      <option value="">Select a deparment</option>
      <option ng-repeat="department in departments" value={{department.id}}>{{department.unique_code}}</option>
    </select>
  </div>
  {{{{/raw-helper}}}}
  <table class="table table-striped table-bordered table-hover table-responsive">
    <thead>
      <tr>
        <th>#</th>
        <th>Office Name</th>
        <th>Office Code</th>
        <th>Office Description</th>
        <th>Office Email</th>
        <th>Office Phone</th>
        <th>Details</th>
      </tr>
    </thead>
    {{{{raw-helper}}}}
    <tbody>
      <tr ng-repeat="office in offices">
        <td>{{$index + 1}}</td>
        <td>{{office.name}}</td>
        <td>{{office.unique_code}}</td>
        <td>{{office.description}}</td>
        <td>{{office.group_email}}</td>
        <td>{{numberToPhone(office.phone)}}</td>
        <td><a ng-click="updateDetail(office.id)">Edit</a></td>
      </tr>
    </tbody>
    {{{{/raw-helper}}}}
  </table>
  <a href="/create_office" class="btn btn-info" style="margin-left: 15px">Configure new office</a>
  {{> loading}}
  {{> notification}}
  <div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Edit office</h4>
        </div>
        <div class="modal-body">
          <form class="form-edit-office" ng-submit="updateOffice()">
            <label for="inputName">Office Name</label>
            <input type="text" id="inputName" ng-model="formOffice.name" class="form-control" placeholder="Office name" required autofocus>
            <label for="inputDescription">Office description</label>
            <textarea class="form-control" rows="2" ng-model="formOffice.description" id="inputDescription" placeholder="Office description" required></textarea>
            <label for="inputCode">Office code</label>
            <input type="text" id="inputCode" ng-model="formOffice.unique_code" class="form-control" placeholder="code code" required>
            <label for="inputEmail">Office email</label>
            <input type="text" id="inputEmail" ng-model="formOffice.group_email" class="form-control" placeholder="Office email" required>
            <label for="inputPhone">Office phone</label>
            <input type="text" id="inputPhone" ng-model="formOffice.phone" ui-mask="1-999-999-9999" class="form-control" ui-mask-placeholder ui-mask-placeholder-char="_" required>
            <button type="submit" class="btn btn-primary submit-form">Update Office</button>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
</div>
{{> rightrail}}
<script src="../js/controllers/offices.js"></script>
