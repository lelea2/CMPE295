{{> leftrail}}
<div class="middle-rail" ng="officesController" data-ng-init="init()">
  <h3>All Offices</h3>
  {{{{raw-helper}}}}
  <div class="col-md-6" style="margin: 15px 0">
    <select class="form-control">
      <option value="">Select a deparment</option>
      <option ng-repeat="department in departments" value={{deparment.id}}>{{department.unique_code}}</option>
    </select>
  </div>
  {{{{/raw-helper}}}}
  <table class="table table-striped table-bordered table-hover table-condensed">
    <thead>
      <tr>
        <th>#</th>
        <th>Office Name</th>
        <th>Office Unique code</th>
        <th>Office Description</th>
        <th>Details</th>
      </tr>
    </thead>
    {{{{raw-helper}}}}
    <tbody>
      <tr ng-repeat="office in offices">
        <td>{{$index + 1}}</td>
        <td>{{office.name}}</td>
        <td>{{office.unique_code}}</td>
        <td>{{office.description}}</td>
        <td><a ng-click="updateDetail(office.id)">Update</a></td>
      </tr>
    </tbody>
    {{{{/raw-helper}}}}
  </table>
  {{> loading}}
  {{> notification}}
</div>
{{> rightrail}}
<script src="../js/controllers/offices.js"></script>
