{{> leftrail}}
<div class="middle-rail" ng-controller="departmentsController" data-ng-init="init()">
  <h3>All Departments</h3>
  <table class="table table-striped table-bordered table-hover table-responsive">
    <thead>
      <tr>
        <th>#</th>
        <th>Department Name</th>
        <th>Department Code</th>
        <th>Department Description</th>
        <th>Department Email</th>
        <th>Department Phone</th>
        <th>Offices</th>
        <th>Details</th>
      </tr>
    </thead>
    {{{{raw-helper}}}}
    <tbody>
      <tr ng-repeat="department in departments">
        <td>{{$index + 1}}</td>
        <td>{{department.name}}</td>
        <td>{{department.unique_code}}</td>
        <td>{{department.description}}</td>
        <td>{{department.group_email}}</td>
        <td>{{department.phone}}</td>
        <td><a href="/offices?department_id={{department.id}}">View office</a></td>
        <td><a ng-click="updateDetail(office.id)">Edit</a></td>
      </tr>
    </tbody>
    {{{{/raw-helper}}}}
  </table>
  {{> loading}}
  {{> notification}}
</div>
{{> rightrail}}
<script src="../js/controllers/departments.js"></script>
